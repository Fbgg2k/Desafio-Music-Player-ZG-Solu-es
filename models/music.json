const express = require('express');
const router = express.Router();
const musicData = require('../data/music.json');

// Rota para obter todas as músicas
router.get('/', (req, res) => {
    res.json(musicData);
});

// Rota para obter uma música específica pelo ID
router.get('/:id', (req, res) => {
    const music = musicData.find((m) => m.id === req.params.id);
    if (music) {
        res.json(music);
    } else {
        res.status(404).json({ message: 'Música não encontrada' });
    }
});

module.exports = router;
